@{
    ViewBag.Title = "DangNhapad";
    Layout = "~/Views/Admin/shared/_layout.cshtml";
}
@*<body>*@
@using (Html.BeginForm())
{
    <div class="container wow fadeInUp">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">Đăng Nhập</h5>
                        <form @Url.Action("DangNhapad") class="form-signin">
                            <div class="form-label-group">
                                <input type="text" id="inputEmail" name="tk" class="form-control" placeholder="Admin" required autofocus>
                                <label for="inputEmail">Username</label>
                            </div>

                            <div class="form-label-group">
                                <input type="password" id="inputPassword" name="mk" class="form-control" placeholder="Password" required>
                                <label for="inputPassword">Password</label>
                            </div>

                            <div class="custom-control custom-checkbox mb-3">
                                <input type="checkbox" class="custom-control-input" id="customCheck1">
                                <label class="custom-control-label" for="customCheck1">Nhớ Mật Khẩu</label>
                            </div>
                            <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Đăng Nhập</button>
                            <hr class="my-4">
                            <h2 style="color:red; text-align:center">@ViewBag.Thongbao </h2>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@*</body>*@

