@using QuanLyThoiTrang.Models;
@model List<QuanLyBanSach.Models.GioHang>
@{
    ViewBag.Title = "DatHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="example-0">
Thông Tin Hàng Hóa

</div>


<div class="container wow fadeInUp">
	<table id="cart" class="table table-hover table-condensed">
    				<thead>
						<tr class ="thead-dark">
							<th style="width:10%">Mã Sản Phẩm</th>
                            <th style="width:20%">Tên Sản Phẩm</th>
							<th style="width:20%">Ảnh Bìa</th>
							<th style="width:10%">Số lượng</th>
							<th style="width:20%">Đơn Giá</th>
							<th style="width:20%">Thành Tiền</th>
                          
                           
						</tr>
					</thead>

         @foreach (var item in Model)
    {
					<tbody>
						<tr>
							
							<td>@item.iMaDH</td>
                            <td>@item.sTenDH</td>
                            <td><img src="~/HinhAnhSP/@item.sAnhBia" style="width:150px;height:150px"/></td>
                            @using (Html.BeginForm("CapnhatGiohang", "GioHang", new { @iMadh = item.iMaDH }))
            {
                <td>
                    @item.iSoLuong
                </td>
                <td>@String.Format("{0:0,0}", item.dDonGia)</td>
                <td>@String.Format("{0:0,0}", item.dThanhTien)</td>
            }
                           
						</tr>
					</tbody>
         }
					<tfoot>
						<tr style="font-weight:bold; text-align:right; color:white">
        <td colspan="3">Số lượng sản phẩm: @ViewBag.Tongsoluong</td>
        <td colspan="3">Tổng tiền: @String.Format("{0:0,0}", @ViewBag.Tongtien) VNĐ</td>
    </tr>
						<tr>
							<td><a href="\GioHang\GioHang" class="btn btn-warning"><i class="fa fa-angle-left"></i> Trở Lại Giỏ Hàng</a></td>
							
                          
                          
							
						</tr>

					</tfoot>
				</table>
</div>


@{
    KHACHHANG kh = (KHACHHANG)Session["TaiKhoan"];
}


@using(Html.BeginForm())
{
<div class="container wow slideInLeft">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Thông Tin Đặt Hàng</h5>
              <hr />
            <form  class="form-signin">

              
                <table>
                <tr style="height:40px">
            <td>Họ tên khách hàng:</td>
            <td style="font-weight:bold">@kh.HOTEN</td>
        </tr>
        <tr style="height:40px">
            <td>Địa chỉ:</td>
            <td style="font-weight:bold">@kh.DIACHI</td>
        </tr>
        <tr style="height:40px">
            <td>Điện thoại:</td>
            <td style="font-weight:bold">@kh.SDT</td>
        </tr>
                     </table>

               <div class="form-label-group">
                <input name="NgayGiao" type="date" id="inputNgaySinh" class="form-control"  required autofocus>
                <label for="inputUserame">Ngày Giao</label>
                     @ViewData["Loi1"]
              </div>
                <div>
            
                    </div>
              <div class="custom-control custom-checkbox mb-3">
                <input type="checkbox" class="custom-control-input" id="customCheck1">
                
              </div>
              <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Đồng ý Đặt Hàng</button>
              <hr class="my-4">
              <h2 style="color:red; text-align:center">@ViewBag.Thongbao </h2>
              

            </form>
              
          </div>
        </div>
      </div>
    </div>
  </div>
}