@using QuanLyThoiTrang.Models;
@model List<QuanLyBanSach.Models.GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="example-2 ">
GIỎ HÀNG

</div>


<div class="container wow bounceInUp">
	<table id="cart" class="table table-hover table-condensed">
    				<thead>
						<tr class ="thead-dark">
							<th style="width:5%">Mã Hàng</th>
                            <th style="width:20%">Tên Hàng</th>
							<th style="width:20%">Ảnh Bìa</th>
							<th style="width:5%">Số lượng</th>
							<th style="width:15%">Đơn Giá</th>
							<th style="width:15%">Thành Tiền</th>
                            <th style="width:20%" class="text-center" >Chức Năng</th>
                           
						</tr>
					</thead>

         @foreach (var item in Model)
    {
					<tbody>
						<tr>
							
							<td>@item.iMaDH</td>
                            <td>@item.sTenDH</td>
                            <td><img src="~/HinhAnhSP/@item.sAnhBia" style="width:150px;height:150px"/></td>
                            <td>@item.iSoLuong</td>
                            <td>@String.Format("{0:0,0}",item.dDonGia)</td>
                            <td>@String.Format("{0:0,0}",item.dThanhTien)</td>
							<td class="actions" data-th="">
								<button class="btn btn-info btn-sm"><a class="fa fa-refresh" href=" @Url.Action("Details", "SanPham", new { id = item.iMaDH })"></a></button>
								@*<button class="btn btn-danger btn-sm"><i class="fa fa-trash-o" > @Html.ActionLink("","XoaGioHang", new{@iMASP =item.iMaDH})</i></button>					*@	
                                		<button class="btn btn-danger btn-sm"><a class="fa fa-trash-o" href="@Url.Action("XoaGioHang","GioHang", new{@iMADH =item.iMaDH})" > </a></button>	
							</td>
                           
						</tr>
					</tbody>
         }
					<tfoot>
						<tr class="visible-xs">
							 <td>Số lượng Hang:@ViewBag.Tongsoluong</td>
                             <td>Tổng tiền:@String.Format("{0:0,0}",@ViewBag.Tongtien) VND</td>
						</tr>
						<tr>
							<td><a href="\SanPham\Index" class="btn btn-warning wow slideInLeft"><i class="fa fa-angle-left"></i> Quay lại Mua Hàng</a></td>
							<td colspan="2" class="hidden-xs"></td>
						    <td colspan="2" class="hidden-xs"></td>
                           <td class="hidden-xs"></td>
                          
							<td><a href="\GioHang\DatHang" class="btn btn-success btn-block wow slideInLeft">Đặt Hàng <i class="fa fa-angle-right"></i></a></td>
						</tr>

					</tfoot>
				</table>
</div>
